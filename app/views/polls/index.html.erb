<!doctype html>

<html>
    <head>
        <title>Niner Picks</title>
        <%= render partial: 'bootstrap' %>
    </head>
    
<body>
    <div class="container">
        <div class="row">
            <div class="col">
                <%= link_to 'Go Home', {:controller => 'welcome'}, :class => "btn btn-lg btn-default", :type => "btn" %>
            </div>
            <div class="col">
                <h1>Niner Picks</h1>
            </div>
            <div class="col">
                <%= render partial: 'userbar' %>
            </div>
        </div>
        
        <div class="row">
            <div class="col">
                <%= link_to 'Create Poll', new_poll_path, :class => "btn btn-lg btn-default", :type => "btn" %>
            </div>
            <div class="col">
                
            </div>
            <div class="col">
                
            </div>
        </div>
        
        <div class="row">
            <div class="col">
                <table align="center">
                    <tr>
                        <th colspan="6">All Polls</th>
                    </tr>
                    <tr>
                        <th>New</th>
                        <th>Poll Name</th>
                        <th>Poll Author</th>
                        <th>Date Created</th>
                        <th>Total Responses</th>
                    </tr>
                    <% @polls.each do |poll| %>
                        <tr class="clickable" data-link="<%= poll_path(poll) %>">
                            <td>*</td>
                            <td><%= poll.title %></td>
                            <td><%= poll.author %></td>
                            <td><%= poll.created_at %></td>
                            <td><%= poll.responses.count %></td>
                        </tr>
                    <% end %>
                </table>
            </div>
        </div>
        <div class="row">
            <!-- Add pagination -->
        </div>
    </div>
</body>

<script>
jQuery(document).ready(function($) {
    $("tr.clickable").click(function() {
        window.location = $(this).data("link");
    });
});</script>
</html>