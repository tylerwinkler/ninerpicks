<!doctype html>

<html>
    <head>
        <title>Niner Picks</title>
        <%= render partial: 'bootstrap' %>
    </head>
    
<body>
    <div class="container">
        <div class="row">
            <div class="col">
                <h1>Niner Picks</h1>
            </div>
        </div>
        
        <div class="row">
            <div class="col">
                <%= link_to 'Create Poll', new_poll_path, :class => "btn btn-lg btn-default", :type => "btn" %>
            </div>
            <div class="col">
                
            </div>
            <div class="col">
                <%= link_to 'Enter Poll ID', poll_path(1), :class => "btn btn-lg btn-default", :type => "btn" %>
            </div>
        </div>
        
        <div class="row">
            <div class="col">
                <table align="center">
                    <tr>
                        <th colspan="6">All Polls</th>
                    </tr>
                    <tr>
                        <th>New</th>
                        <th>Poll Name</th>
                        <th>Poll Author</th>
                        <th>Date Created</th>
                        <th>Total Votes</th>
                        <th></th>
                    </tr>
                    <% @polls.each do |poll| %>
                        <tr>
                            <td>*</td>
                            <td><%= poll.title %></td>
                            <td><%= poll.author %></td>
                            <td><%= poll.created_at %></td>
                            <td><%= poll.totalvotes %></td>
                            <td>
                                <%= link_to 'Take Poll', poll_path(poll.id), :class => "btn btn-lg btn-default", :type => "btn" %>
                                <%= link_to 'Delete Poll', {:controller=> "polls", :action => "destroy", :id=>poll.id}, :method => 'delete', :class => "btn btn-lg btn-default", :type => "btn" %>
                            </td>
                        </tr>
                    <% end %>
                </table>
            </div>
        </div>
    </div>
</body>
</html>