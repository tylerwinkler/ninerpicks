<h1>Niner Picks</h1>
<h2>Create Poll</h2>

<script>
    function add()
    {
        var div = document.getElementById("form");
        
        var newQuestionTitle = document.createElement("span");
        newQuestionTitle.innerHTML("<p>Label</p>");
        
        div.appendChild(newQuestionTitle);
    }
</script>

<%= form_for @poll do |p| %>
<div id="form">
    <p>
        <%= p.label :author %>
        <%= p.text_field :author %>
    </p>
    <p>
        <%= p.label :title %>
        <%= p.text_field :title %>
    </p>
    <p>
        <%= p.label :question %>
        <%= p.text_field :question %>
    </p>
    <p>
        <%= p.submit %>
    </p>
</div>
<% end %>

<button onclick="add()">
    Add Question
</button>

