  <h2>Question: <%= @poll.question %></h2>
  <h3>Author: <%= @poll.user.name %></h3>
 
  <% if @poll.errors.any? %>
    <div class="alert alert-danger">
      <% @poll.errors.full_messages.each do |msg| %>
        <p><%= msg %></p>
      <% end %>
    </div>
  <% end %>

  <%= form_for([@poll, @poll.responses.build]) do |f| %>
    <%= f.radio_button :answer, @yes_choice %> 
    <%= f.label :answer, @yes_choice %> <br>
    
    <%= f.radio_button :answer, @no_choice %>
    <%= f.label :answer, @no_choice %>
  
    <p>
      <%= f.submit %>
    </p>
  <% end %>