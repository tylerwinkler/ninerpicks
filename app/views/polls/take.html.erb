<div class="container">
              <h1>Niner Picks</h1>
              
<h2>Taking Poll: <%= @poll.title %> by <%= @poll.author %></h2>
<h3><%= @poll.question %></h3>

<%= form_for([@poll, @poll.responses.build]) do |f| %>

<%= f.radio_button :answer, 'Yes' %> 
<%= f.label :answer, 'Yes' %> <br>
<%= f.radio_button :answer, 'No' %>
<%= f.label :answer, 'No' %>
  <p>
    <%= f.submit %>
  </p>
<%= link_to 'Go Home', {:controller => 'welcome'}, :class => "btn btn-lg btn-default", :type => "btn" %>
<% end %>